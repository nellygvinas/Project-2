<div class="container">

  <h1>{{title}}</h1>
  {{!-- <p>Welcome to the {{title}}</p> --}}

  {{!-- LOGIN TABS --}}
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Sign In</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Sign Up</a></li>

      </ul>
    </div>
    <div id="test1" class="col s12">
      <h1>Sign-In</h1>

      <form action="/login" method="POST">
        {{!-- with passport name must = username --}}
        <label for="">Username</label>
        <input type="text" name="username">

        <label for="">Password</label>
        <input type="password" name="password">
        {{!-- name must = password --}}
        <button>Submit</button>
      </form>

    </div>

    <div id="test2" class="col s12">
      <h1>Sign-Up</h1>
      <form action="/signup" method="POST">

        <label for="">Email</label>
        <input type="email" name="theEmail">

        <label for="">Username</label>
        <input type="text" name="theUsername">

        <label for="">Password</label>
        <input type="password" name="thePassword">

        <button>Submit</button>
      </form>
    </div>

  </div>

</div> <!-- close container -->