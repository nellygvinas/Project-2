{{!-- CONTAINER --}}
<div class="container">
  <h2>Children</h2>

  <div class="row">

    {{#each listOfChildren}}
    {{#if this.owned}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src="{{this.image}}">
          <span class="card-title"><a href="/feed/details/{{this._id}}">{{this.name}}</a></span>
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
      </div>
    </div>
    {{/if}}
    {{/each}}

    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src="images/add-child.jpg">
          <span class="card-title">Add New Child</span>
          <a class="btn-floating halfway-fab waves-effect waves-light red" href="/feed/new-child"><i class="material-icons">add</i></a>
        </div>
      </div>
    </div>


  </div> <!-- end child row -->


  <div>

    {{!-- CREATE POST --}}
    <h2>Create Post</h2>

    <form action="" id="create-post">

      <div>
        <label>Select Child</label>
        <select name="children" id="postChildId" multiple>
          {{#each listOfChildren}}
          {{#if this.owned}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/if}}
          {{/each}}
        </select>
      </div>

      <div>
        <label>Title</label>
        <input type="text" id="postTitle">
      </div>

      <div>
        <label>Date Created</label>
        <input type="date" id="postDate">
      </div>

      <div>
        <label>Description</label>
        <input type="text" id="postDescription">
      </div>

      <div>
        <label>Add Image</label>
        <input type="file" id="postImage">
      </div>

      <input type="submit">

    </form>

  </div>



  <div class="post-container">

    <h1>Posts</h1>

    {{#each listOfPosts}}
    <div class="post-section">

      <div class="post-card">

        <h2 id="post-title">
          {{this.title}}
        </h2>
        <div class="post-container">

          {{#each listOfPosts}}

          <div class="post-card">

            <h2 id="post-title">
              {{this.title}}
            </h2>

            <h4 id="post-date">
              {{this.creation}}
            </h4>

            <h4 id="post-date">
              {{this.creation}}
            </h4>

            <p id="post-description">
              {{this.description}}
            </p>

            <img id="post-image" src="{{this.image}}">

            <p id="post-child">
              {{this.child}}
            </p>

          </div>
          {{/each}}

        </div>


        <p id="post-description">
          {{this.description}}
        </p>

        <img id="post-image" src="{{this.image}}">

        <p id="post-child">
          {{this.child}}
        </p>

      </div>
      {{/each}}
    </div>
  </div>



  <script src="/javascripts/new-post.js"></script>